<section>
  <div class="topProduct py-5">
    <div class="container">
      <div class="row d-flex justify-content-between align-items-center">

        <% products2.forEach((product)=>{ %>
          <div class="rondPr d-flex justify-content-center align-items-center flex-column">
            <div class="content">
              <img src="Images/badroom.jpeg" alt="">
              <h6 class="mt-3">
                <%= product.title %>
              </h6>
            </div>
          </div>

          <% }) %>
      </div>
    </div>
  </div>
  <div class="botProduct py-4">
    <div class="container text-center">
      <h1>Our Products</h1>
      <p>
        Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do<br />
        eiusmo tempor incididunt ut labore
      </p>
      <div class="menu d-flex justify-content-center">
        <a href="#">New Arrival</a>
        <a href="#">Featured</a>
        <a href="#">On Sale</a>
        <a href="#">Trending</a>
      </div>
      <div class="row g-4 mt-5">
        <% products.forEach(product=> { %>
          <div class="col-md-3">
            <div class="card position-relative">
              <% if (product.discount) { %>
                <span class="discount-badge">
                  <%= product.discount %>
                </span>
                <% } %>
                  <img src="<%= product.img %>" class="card-img-top" alt="<%= product.title %>" />
                  <button class="wishlist-btn"><i class="bi bi-heart"></i></button>
                  <div class="card-body text-center">
                    <h5 class="card-title">
                      <%= product.title %>
                    </h5>
                    <p class="card-text">
                      <% if (product.originalPrice) { %>
                        <del>$<%= product.originalPrice %></del>
                        <% } %>
                          <span class="text-success">$<%= product.price %></span>
                    </p>
                  </div>
            </div>
          </div>
          <% }); %>
      </div>
    </div>
  </div>

</section>